<Window x:Class="PassMApp.Practice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassMApp"
        mc:Ignorable="d"
                Title="Practice" Height="422" Width="643" Background="#FF7BC7D8" FontSize="14" Loaded="Window_Loaded" Margin="0,-66,0,0" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AutomationProperties.AccessKey="btn_Go">
    <Grid>
        <TextBlock x:Name="txbAccHint" Text="{Binding Path=Account}" Margin="147,56,261,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="16" TextDecorations="Underline" FontWeight="Bold" Foreground="#FF0101D6"/>
        <PasswordBox x:Name="pbPractice" Height="24" Margin="122,114,0,0" VerticalAlignment="Top" AutomationProperties.IsRequiredForForm="True" HorizontalAlignment="Left" Width="263"/>
        <Label Content="Account :" HorizontalAlignment="Left" Margin="78,241,0,0" VerticalAlignment="Top"/>
        <Label Content="Attempts Made :" HorizontalAlignment="Left" Margin="33,267,0,0" VerticalAlignment="Top"/>
        <Label Content="Attempts Passed :" HorizontalAlignment="Left" Margin="27,293,0,0" VerticalAlignment="Top"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="72,319,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnGo" Content="Go" Margin="0,100,116,242" HorizontalAlignment="Right" Width="118" Click="btnGo_Click" FontSize="16" Padding="1" IsDefault="True"/>
        <TextBlock x:Name="txbAcc" HorizontalAlignment="Left" Height="19" Margin="147,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442"/>
        <TextBlock x:Name="txbAttM" HorizontalAlignment="Left" Height="21" Margin="147,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146"/>
        <TextBlock x:Name="txbAttP" HorizontalAlignment="Left" Height="21" Margin="147,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146"/>
        <TextBlock x:Name="txbPass" HorizontalAlignment="Left" Height="24" Margin="147,322,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="357" FontSize="14"/>
        <GroupBox Header="Stats" HorizontalAlignment="Left" Height="149" Margin="18,211,0,0" VerticalAlignment="Top" Width="597"/>
        <Label Content="Password for:" Height="34" Margin="15,52,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="108" FontSize="16"/>

    </Grid>
</Window>

